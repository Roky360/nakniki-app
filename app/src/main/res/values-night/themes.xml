<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NaknikiNetflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.NaknikiNetflix" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>
    <!--  Filled button  -->
    <style name="ButtonMain" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">12dp</item>
    </style>
    <!--  Text field style  -->
    <style name="TextField" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
</resources>